{
  "name": "adnbn-ui",
  "version": "0.1.3",
  "description": "A comprehensive React UI component library designed exclusively for the AddonBone browser extension framework with customizable theming and consistent design patterns",
  "keywords": [
    "react",
    "ui",
    "components",
    "adnbn",
    "addonbone",
    "browser-extension",
    "theme",
    "customizable",
    "typescript",
    "design-system"
  ],
  "author": "Addon Bone",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/addonbone/addonbone-ui.git"
  },
  "types": "./src/index.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./src/index.ts"
      ],
      "config": [
        "./src/config/index.ts"
      ],
      "plugin": [
        "./src/plugin/index.ts"
      ],
      "theme": [
        "./src/styles/mixins.scss"
      ]
    }
  },
  "exports": {
    ".": "./src/index.ts",
    "./config": "./src/config/index.ts",
    "./plugin": "./src/plugin/index.ts",
    "./theme": "./src/styles/mixins.scss"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write ."
  },
  "dependencies": {
    "adnbn": "^0.0.54",
    "autosize": "^6.0.1",
    "classnames": "^2.5.1",
    "odometer": "^0.4.8",
    "radix-ui": "^1.1.3",
    "sass": "^1.85.1",
    "react-highlight-words": "^0.21.0",
    "ts-deepmerge": "^7.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@svgr/webpack": "^8.1.0",
    "@types/autosize": "^4.0.3",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-highlight-words": "^0.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "playwright": "^1.51.0",
    "rspack-plugin-virtual-module": "^1.0.0",
    "storybook": "^8.6.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.1",
    "vitest": "^3.0.8",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0 || ^19.0.0-rc",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
