{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "composite": false,
    "noEmit": false,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.*",
    "tests",
    "dist",
    "dist-types"
  ]
}
